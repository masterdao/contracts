{
  "extends": "solhint:recommended",
  "rules": {
    "prettier/prettier": "error",
    "compiler-version": ["error", "^0.8.0"],
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "quotes": ["error", "double"],
    "indent": ["off", 4],
    "reason-string": [
      "warn",
      {
        "maxLength": 64
      }
    ]
  },
  "plugins": ["prettier"]
}
