  "scripts": {
    "compile": "hardhat compile",
    "pretest": "hardhat compile",
    "test:all": "npm run test -- --parallel",
    "test": "hardhat test **/*.test.ts",
    "dev": "hardhat node --no-deploy",
    "format": "prettier --write .",
    "prepare": "husky install",
    "clean": "hardhat clean",
    "predeploy": "hardhat clean && hardhat compile",
    "postdeploy": "node scripts/build-artifact.js",
    "deploy:localhost": "hardhat deploy --network localhost",
    "deploy:rinkeby": "npm run predeploy && hardhat deploy --network rinkeby && npm run postdeploy",
